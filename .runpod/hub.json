{
  "title": "Runpod Worker Ollama",
  "description": "A serverless Ollama Worker for Runpod",
  "type": "serverless",
  "category": "language",
  "iconUrl": "https://ollama.com/public/ollama.png",
  "config": {
    "runsOn": "GPU",
    "gpuCount": 1,
    "gpuIds": "ADA_24",
    "containerDiskInGb": 20,
    "presets": [],
    "env": [
      {
        "key": "MODEL_NAME",
          "input": {
            "name": "Model Name",
            "type": "string",
            "description": "Name of a model to preload",
            "default": "gemma3:27b",
            "advanced": false
          }
      }
    ]
  }
}